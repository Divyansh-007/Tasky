<link rel="stylesheet" href="/css/sign_in_page.css">
<h1 id="heading"> <span> <i class="fas fa-sign-in-alt fa-lg"></i> </span> Sign In </h1>

<form action="/user/create-session" method="POST">
    <span class="label">Email: </span>
    <input type="email" name="email" placeholder="johnSmith@gmail.com" required class="left_margin">
    <br>
    <span class="label">Password: </span>
    <input type="password" name="password" placeholder="Password" required class="top_margin">
    <br>
    <input type="submit" value="Sign In" id="btn">
    <a href="/password/forget" style="font-size: 1.25rem;">Forget Password</a>
    <div class="google_btn">
        <a href="/user/auth/google">Sign Up / Sign In with <i class="fab fa-google"></i></a>
    </div>
</form>
