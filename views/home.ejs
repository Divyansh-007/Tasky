<link rel="stylesheet" href="/css/home.css">
<script src="https://kit.fontawesome.com/75cf4e84e0.js" crossorigin="anonymous"></script>

<div id="form_box">
    <h2 class="form_head">Welcome to Tasky</h2>
    <form action="/user/create-session" method="POST">
        <input type="email" placeholder="email" name="email" required>
        <br>
        <input type="password" placeholder="password" name="password" required>
        <br>
        <span class="forget_link"><a href="/password/forget">Forgot Password?</a></span>
        <br>
        <input type="submit" value="Login" class="btn">
    </form>
    <p class="slant">-------- Or --------</p>
    <div class="gLink">
        <p class="slant"><a href="/user/auth/google"><i class="fab fa-google"></i> Login with Google</a></p>
    </div>
    <p class="sign_up_link"><a href="/user/sign-up">New Here? Create Account..</a></p>
</div>