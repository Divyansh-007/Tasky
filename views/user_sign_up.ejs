<link rel="stylesheet" href="/css/sign_up_page.css">
<h1 id="heading"> <span> <i class="fas fa-user-plus fa-lg"></i> </span> Sign Up  </h1>

<form action="/user/create" method="POST">
    <span class="label">Name: </span>
    <input type="text" name="fname" placeholder="Your First Name" required class="req_margin">
    <input type="text" name="lname" placeholder="Your Last Name" required>
    <br>
    <span class="label">Email: </span>
    <input type="email" name="email" placeholder="Your Email" required class="req_margin" style="margin-top: 10px;">
    <br>
    <span class="label">Password: </span>
    <input type="password" name="password" placeholder="Password" required class="pass">
    <br>
    <input type="password" name="confirm_password" placeholder="Confirm Password" required class="cfm_pass">
    <br>
    <input type="submit" value="Sign Up" id="btn">
</form>