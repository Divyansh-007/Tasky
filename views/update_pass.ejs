<link rel="stylesheet" href="/css/update_pass.css">
<h2>Reset Password</h2>
<hr>
<% if(user.updatePasswordCode === undefined){ %> 
    <h2 class="link"> <a href="/user/generate-code/<%= user.id %>">Send Verification Code</a> </h2>
<% }else { %> 
    <form id="reset_form" action="/user/reset" method="POST">
        <h3 class="label">Verification Code:</h3>
        <input type="text" name="ver_code" required>
        <br>
        <h3 class="label">New Password:</h3>
        <input type="password" name="new_password" required>
        <br>
        <h3 class="label">Confirm Password:</h3>
        <input type="password" name="confirm_new_password" required>
        <br>
        <input type="submit" value="Reset Password" id="btn">
    </form>
<% } %>